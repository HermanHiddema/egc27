<div class="container-wide py-12">
  <div class="mb-6">
    <%= link_to "â† Back to Menus", menus_path, class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
  </div>

  <article class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
    <header class="mb-6 border-b border-gray-200 pb-4 flex items-start justify-between gap-4">
      <div>
        <h1 class="text-4xl font-bold mb-2"><%= @menu.name %></h1>
        <p class="text-sm text-gray-600">Location: <%= @menu.location %></p>
        <p class="text-sm text-gray-600">Status: <%= @menu.active? ? "Active" : "Inactive" %></p>
      </div>

      <div class="flex gap-4 shrink-0">
        <%= link_to "Menu Items", menu_menu_items_path(@menu), class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
        <%= link_to "Edit", edit_menu_path(@menu), class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
        <%= button_to "Delete", menu_path(@menu), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this menu?" }, class: "text-brand-red-600 hover:text-brand-red-700 transition" %>
      </div>
    </header>

    <div>
      <h2 class="text-xl font-semibold mb-4">Menu Items</h2>
      <% if @menu_items.any? %>
        <div class="space-y-3">
          <% @menu_items.each do |item| %>
            <div class="border border-gray-200 rounded-lg p-4">
              <div class="flex items-start justify-between gap-4">
                <div>
                  <p class="font-semibold"><%= item.label %></p>
                  <p class="text-sm text-gray-600">Parent: <%= item.parent&.label || "Root" %></p>
                </div>
                <%= link_to "View", menu_menu_item_path(@menu, item), class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500">No items in this menu yet.</p>
      <% end %>
    </div>
  </article>
</div>
