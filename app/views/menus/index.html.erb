<div class="container-wide py-12">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold">Menus</h1>
    <%= link_to "New Menu", new_menu_path, class: "bg-brand-blue-600 text-white px-6 py-2 rounded-lg hover:bg-brand-blue-700 transition" %>
  </div>

  <div class="space-y-6">
    <% @menus.each do |menu| %>
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <div class="flex items-start justify-between gap-4">
          <div>
            <h2 class="text-2xl font-bold mb-2">
              <%= link_to menu.name, menu_path(menu), class: "hover:text-brand-red-600 transition" %>
            </h2>
            <p class="text-sm text-gray-600">Location: <%= menu.location %></p>
            <p class="text-sm text-gray-600">Status: <%= menu.active? ? "Active" : "Inactive" %></p>
          </div>

          <div class="flex gap-4 shrink-0">
            <%= link_to "Items", menu_menu_items_path(menu), class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
            <%= link_to "Edit", edit_menu_path(menu), class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
            <%= button_to "Delete", menu_path(menu), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-brand-red-600 hover:text-brand-red-700 transition" %>
          </div>
        </div>
      </div>
    <% end %>

    <% if @menus.empty? %>
      <div class="text-center text-gray-500 py-12">
        <p class="text-xl">No menus yet.</p>
        <p class="mt-4">
          <%= link_to "Create the first menu", new_menu_path, class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
        </p>
      </div>
    <% end %>
  </div>
</div>
