    <script>
      // Setup submenu handlers - runs on initial load and after Turbo navigations
      function setupSubmenus() {
        const excursionsBtn = document.getElementById('excursions-btn');
        const excursionsMenu = document.getElementById('excursions-menu');
        
        if (excursionsBtn && excursionsMenu) {
          let excursionsTimeout;
          
          // Remove existing listeners to prevent duplicates
          const newExcursionsBtn = excursionsBtn.cloneNode(true);
          excursionsBtn.parentNode.replaceChild(newExcursionsBtn, excursionsBtn);
          
          // Show submenu on hover
          newExcursionsBtn.addEventListener('mouseenter', function(e) {
            clearTimeout(excursionsTimeout);
            
            // Show the menu
            excursionsMenu.style.display = 'block';
            excursionsMenu.classList.remove('hidden');
            
            // Position it to the right of the button
            const rect = newExcursionsBtn.getBoundingClientRect();
            excursionsMenu.style.position = 'fixed';
            excursionsMenu.style.left = (rect.right + 5) + 'px';
            excursionsMenu.style.top = rect.top + 'px';
          });
          
          // Hide when leaving button (unless going to menu)
          newExcursionsBtn.addEventListener('mouseleave', function(e) {
            excursionsTimeout = setTimeout(function() {
              excursionsMenu.style.display = 'none';
              excursionsMenu.classList.add('hidden');
            }, 200);
          });
          
          // Keep open when hovering over menu
          excursionsMenu.addEventListener('mouseenter', function(e) {
            clearTimeout(excursionsTimeout);
          });
          
          // Hide when leaving menu
          excursionsMenu.addEventListener('mouseleave', function(e) {
            excursionsMenu.style.display = 'none';
            excursionsMenu.classList.add('hidden');
          });
        }
        
        // Handle Meals submenu
        const mealsBtn = document.getElementById('meals-btn');
        const mealsMenu = document.getElementById('meals-menu');
        
        if (mealsBtn && mealsMenu) {
          let mealsTimeout;
          
          // Remove existing listeners to prevent duplicates
          const newMealsBtn = mealsBtn.cloneNode(true);
          mealsBtn.parentNode.replaceChild(newMealsBtn, mealsBtn);
          
          // Show submenu on hover
          newMealsBtn.addEventListener('mouseenter', function(e) {
            clearTimeout(mealsTimeout);
            
            // Show the menu
            mealsMenu.style.display = 'block';
            mealsMenu.classList.remove('hidden');
            
            // Position it to the right of the button
            const rect = newMealsBtn.getBoundingClientRect();
            mealsMenu.style.position = 'fixed';
            mealsMenu.style.left = (rect.right + 5) + 'px';
            mealsMenu.style.top = rect.top + 'px';
          });
          
          // Hide when leaving button (unless going to menu)
          newMealsBtn.addEventListener('mouseleave', function(e) {
            mealsTimeout = setTimeout(function() {
              mealsMenu.style.display = 'none';
              mealsMenu.classList.add('hidden');
            }, 200);
          });
          
          // Keep open when hovering over menu
          mealsMenu.addEventListener('mouseenter', function(e) {
            clearTimeout(mealsTimeout);
          });
          
          // Hide when leaving menu
          mealsMenu.addEventListener('mouseleave', function(e) {
            mealsMenu.style.display = 'none';
            mealsMenu.classList.add('hidden');
          });
        }
      }
      
      // Run on initial page load
      document.addEventListener('DOMContentLoaded', setupSubmenus);
      
      // Run after Turbo navigations
      document.addEventListener('turbo:load', setupSubmenus);
    </script>
