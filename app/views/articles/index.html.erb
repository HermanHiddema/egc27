<div class="container-wide py-12">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold text-egc-blue">News</h1>
    <% if user_signed_in? %>
      <%= link_to "New Article", new_article_path, class: "bg-egc-blue text-white px-6 py-2 rounded-lg hover:bg-opacity-90 transition" %>
    <% end %>
  </div>

  <div class="space-y-8">
    <% @articles.each do |article| %>
      <div class="bg-white border border-gray-200 rounded-lg p-6 shadow-sm">
        <div class="mb-4">
          <h2 class="text-2xl font-bold text-egc-blue mb-2">
            <%= link_to article.title, article, class: "hover:text-egc-red transition" %>
          </h2>
          <div class="text-sm text-gray-600">
            Posted by <%= article.user.email %> on <%= article.created_at.strftime("%B %d, %Y at %I:%M %p") %>
          </div>
        </div>

        <div class="text-gray-700 mb-4 line-clamp-3">
          <%= sanitize article.content %>
        </div>

        <div class="flex gap-4">
          <%= link_to "Read More", article, class: "text-egc-blue hover:text-egc-red transition" %>
          <% if user_signed_in? %>
            <%= link_to "Edit", edit_article_path(article), class: "text-egc-blue hover:text-egc-red transition" %>
            <%= button_to "Delete", article, method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "text-egc-red hover:text-red-700 transition" %>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @articles.empty? %>
      <div class="text-center text-gray-500 py-12">
        <p class="text-xl">No news articles yet.</p>
        <% if user_signed_in? %>
          <p class="mt-4">
            <%= link_to "Create the first article", new_article_path, class: "text-egc-blue hover:text-egc-red transition" %>
          </p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>