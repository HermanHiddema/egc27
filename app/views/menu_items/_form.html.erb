<%= form_with model: [menu, menu_item] do |form| %>
  <% if menu_item.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
      <h2 class="text-red-800 font-semibold mb-2">There were errors with your submission:</h2>
      <ul class="text-red-700 list-disc list-inside">
        <% menu_item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="space-y-6">
    <div>
      <%= form.label :label, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.text_field :label, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-brand-blue-600 focus:border-brand-blue-600" %>
    </div>

    <div>
      <%= form.label :parent_id, "Parent Item", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :parent_id, @parent_items, :id, :label, { include_blank: "Root item" }, { class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-brand-blue-600 focus:border-brand-blue-600" } %>
    </div>

    <div>
      <%= form.label :page_id, "Internal Page", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.collection_select :page_id, @pages, :id, :title, { include_blank: "None" }, { class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-brand-blue-600 focus:border-brand-blue-600" } %>
    </div>

    <div>
      <%= form.label :url, "External URL", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.url_field :url, placeholder: "https://example.com", class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-brand-blue-600 focus:border-brand-blue-600" %>
      <p class="text-xs text-gray-500 mt-1">Choose either an internal page or an external URL.</p>
    </div>

    <div>
      <%= form.label :position, class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= form.number_field :position, min: 0, class: "w-full border border-gray-300 rounded-lg px-4 py-2 focus:ring-brand-blue-600 focus:border-brand-blue-600" %>
    </div>

    <div class="flex items-center gap-6">
      <div class="flex items-center gap-2">
        <%= form.check_box :visible, class: "rounded border-gray-300 text-brand-blue-600 focus:ring-brand-blue-600" %>
        <%= form.label :visible, class: "text-sm font-medium text-gray-700" %>
      </div>

      <div class="flex items-center gap-2">
        <%= form.check_box :open_in_new_tab, class: "rounded border-gray-300 text-brand-blue-600 focus:ring-brand-blue-600" %>
        <%= form.label :open_in_new_tab, class: "text-sm font-medium text-gray-700" %>
      </div>
    </div>

    <div class="flex gap-4">
      <%= form.submit class: "btn-primary" %>
      <%= link_to "Cancel", menu_menu_items_path(menu), class: "text-brand-blue-600 hover:text-brand-red-600 transition px-4 py-2" %>
    </div>
  </div>
<% end %>
