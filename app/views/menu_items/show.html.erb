<div class="container-wide py-12">
  <div class="mb-6">
    <%= link_to "â† Back to Menu Items", menu_menu_items_path(@menu), class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
  </div>

  <article class="bg-white border border-gray-200 rounded-lg p-8 shadow-sm">
    <header class="mb-6 border-b border-gray-200 pb-4 flex items-start justify-between gap-4">
      <div>
        <h1 class="text-4xl font-bold mb-2"><%= @menu_item.label %></h1>
        <p class="text-sm text-gray-600">Menu: <%= @menu.name %></p>
      </div>

      <div class="flex gap-4 shrink-0">
        <%= link_to "Edit", edit_menu_menu_item_path(@menu, @menu_item), class: "text-brand-blue-600 hover:text-brand-red-600 transition" %>
        <%= button_to "Delete", menu_menu_item_path(@menu, @menu_item), method: :delete, data: { turbo_confirm: "Are you sure you want to delete this menu item?" }, class: "text-brand-red-600 hover:text-brand-red-700 transition" %>
      </div>
    </header>

    <dl class="space-y-3 text-gray-700">
      <div>
        <dt class="font-semibold">Parent</dt>
        <dd><%= @menu_item.parent&.label || "Root" %></dd>
      </div>
      <div>
        <dt class="font-semibold">Destination</dt>
        <dd><%= @menu_item.page.present? ? "Page: #{@menu_item.page.title}" : @menu_item.url %></dd>
      </div>
      <div>
        <dt class="font-semibold">Position</dt>
        <dd><%= @menu_item.position %></dd>
      </div>
      <div>
        <dt class="font-semibold">Visible</dt>
        <dd><%= @menu_item.visible? ? "Yes" : "No" %></dd>
      </div>
      <div>
        <dt class="font-semibold">Open in new tab</dt>
        <dd><%= @menu_item.open_in_new_tab? ? "Yes" : "No" %></dd>
      </div>
    </dl>
  </article>
</div>
