<!-- Hero Section -->
<section class="gradient-hero text-white">
  <div class="container-wide section-padding">
    <div class="max-w-3xl">
      <h1 class="text-5xl md:text-6xl font-black mb-6 text-white">
        Unforgettable Events
        <span class="block text-brand-yellow-400">Start Here</span>
      </h1>
      <p class="text-lg md:text-xl text-neutral-100 mb-8 leading-relaxed">
        Create, manage, and host extraordinary events with our sleek, professional platform. From intimate gatherings to large-scale conferences, we've got you covered.
      </p>
      <div class="flex flex-wrap gap-4">
        <button class="btn-secondary text-lg">Browse Events</button>
        <button class="px-6 py-3 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-brand-blue-600 transition-all duration-200">Learn More</button>
      </div>
    </div>
  </div>
</section>

<!-- Stats Section -->
<section class="section-padding bg-white">
  <div class="container-wide">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="text-center">
        <div class="text-5xl font-bold text-brand-blue-600 mb-2">500+</div>
        <p class="text-xl text-neutral-600">Events Hosted</p>
      </div>
      <div class="text-center">
        <div class="text-5xl font-bold text-brand-red-600 mb-2">50K+</div>
        <p class="text-xl text-neutral-600">Happy Attendees</p>
      </div>
      <div class="text-center">
        <div class="text-5xl font-bold text-brand-yellow-500 mb-2">98%</div>
        <p class="text-xl text-neutral-600">Satisfaction Rate</p>
      </div>
    </div>
  </div>
</section>

<!-- Features Section -->
<section class="section-padding bg-neutral-50">
  <div class="container-wide">
    <h2 class="text-center mb-16">Powerful Features</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- Feature Card 1 -->
      <div class="card-elevated p-8">
        <div class="w-14 h-14 bg-gradient-to-br from-brand-blue-500 to-brand-blue-600 rounded-xl flex items-center justify-center mb-6">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10m7 8H3V7a2 2 0 012-2h14a2 2 0 012 2v12a2 2 0 01-2 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-brand-blue-600 mb-4">Smart Scheduling</h3>
        <p class="text-neutral-600 leading-relaxed">Effortlessly organize events with intelligent scheduling tools and automatic conflict detection.</p>
      </div>

      <!-- Feature Card 2 -->
      <div class="card-elevated p-8">
        <div class="w-14 h-14 bg-gradient-to-br from-brand-red-500 to-brand-red-600 rounded-xl flex items-center justify-center mb-6">
          <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-brand-red-600 mb-4">Easy Payments</h3>
        <p class="text-neutral-600 leading-relaxed">Accept registrations and payments securely with integrated payment processing.</p>
      </div>

      <!-- Feature Card 3 -->
      <div class="card-elevated p-8">
        <div class="w-14 h-14 bg-gradient-to-br from-brand-yellow-400 to-brand-yellow-600 rounded-xl flex items-center justify-center mb-6">
          <svg class="w-7 h-7 text-neutral-900" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4 2 2 0 000-4zm0 0V4m0 2a2 2 0 100 4 2 2 0 000-4zm6 6v-2m0 2a2 2 0 100 4 2 2 0 000-4zm0 0v-2m0 2a2 2 0 100 4 2 2 0 000-4zM6 12v-2m0 2a2 2 0 100 4 2 2 0 000-4zm0 0v-2m0 2a2 2 0 100 4 2 2 0 000-4z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-bold text-neutral-800 mb-4">Full Analytics</h3>
        <p class="text-neutral-600 leading-relaxed">Track attendance, engagement, and ROI with comprehensive analytics dashboards.</p>
      </div>
    </div>
  </div>
</section>

<!-- Events Showcase Section -->
<section class="section-padding bg-white">
  <div class="container-wide">
    <h2 class="text-center mb-16">Featured Events</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% 3.times do |i| %>
        <div class="card overflow-hidden group">
          <div class="h-48 bg-gradient-to-br <%= i == 0 ? 'from-brand-blue-400 to-brand-blue-600' : i == 1 ? 'from-brand-red-400 to-brand-red-600' : 'from-brand-yellow-400 to-brand-yellow-600' %> relative overflow-hidden">
            <div class="absolute inset-0 group-hover:opacity-100 opacity-0 transition-all duration-300 bg-black bg-opacity-40 flex items-center justify-center">
              <button class="btn-secondary">View Details</button>
            </div>
          </div>
          <div class="p-6">
            <span class="inline-block px-3 py-1 bg-neutral-100 text-neutral-600 rounded-full text-sm font-medium mb-3">
              <%= ['Conference', 'Networking', 'Workshop'][i] %>
            </span>
            <h3 class="text-xl font-bold text-neutral-900 mb-2">Event Title <%= i + 1 %></h3>
            <p class="text-neutral-600 mb-4">Discover amazing opportunities and connect with industry leaders at this flagship event.</p>
            <div class="flex items-center text-sm text-neutral-500">
              <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20"><path d="M5.5 13a3.5 3.5 0 01-.369-6.98 4 4 0 117.753-1.3A4.5 4.5 0 1113.5 13H11V9.413l1.293 1.293a1 1 0 001.414-1.414l-3-3a1 1 0 00-1.414 0l-3 3a1 1 0 001.414 1.414L9 9.414V13H5.5z"></path></svg>
              <span><%= 50 + i * 20 %> Attendees</span>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- CTA Section -->
<section class="section-padding gradient-hero">
  <div class="container-wide text-center">
    <h2 class="text-4xl md:text-5xl font-bold text-white mb-6">Ready to Create Your Event?</h2>
    <p class="text-lg text-neutral-100 mb-8 max-w-2xl mx-auto">Join thousands of event organizers who trust us with their most important gatherings.</p>
    <button class="btn-secondary text-lg px-8 py-4">Get Started Today</button>
  </div>
</section>
