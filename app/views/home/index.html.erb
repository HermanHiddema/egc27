<div class="container-wide py-12">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold">Recent News</h1>
    <%= link_to "View All News", articles_path, class: "text-brand-blue-600 hover:text-brand-red-600 transition font-medium" %>
  </div>

  <% if @recent_articles.any? %>
    <div class="space-y-6">
      <% @recent_articles.each do |article| %>
        <div class="card p-6">
          <div class="mb-4">
            <h2 class="text-2xl font-bold mb-2">
              <%= link_to article.title, article_path(article), class: "hover:text-brand-red-600 transition" %>
            </h2>
            <div class="text-sm text-neutral-600">
              Posted by <%= article.user.display_name %> on <%= article.created_at.strftime("%B %d, %Y at %I:%M %p") %>
            </div>
          </div>

          <div class="text-neutral-700 mb-4 line-clamp-3">
            <%= sanitize article.content %>
          </div>

          <div class="flex gap-4">
            <%= link_to "Read More â†’", article_path(article), class: "text-brand-blue-600 hover:text-brand-red-600 transition font-medium" %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="text-center py-12">
      <p class="text-xl text-neutral-500 mb-4">No news articles yet.</p>
      <% if user_signed_in? %>
        <%= link_to "Create the first article", new_article_path, class: "btn-primary" %>
      <% end %>
    </div>
  <% end %>
</div>
